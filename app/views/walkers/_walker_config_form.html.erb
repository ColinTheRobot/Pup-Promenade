
  <div class='row'>
    <%= form_for @walker, html: {class: "small-8 columns"} do |f| %>
      <%= f.label(:image_url, class: "label") %>
      <%= f.text_field(:image_url) %>
        <%= f.fields_for :walker_profile, @walker.build_walker_profile do |profile| %>
          <%= profile.label(:neighborhood_ids) %>
          <%= profile.collection_select(:neighborhood_ids, @neighborhoods, :id, :name, {}, {multiple: :true}) %>
      <% end %>
        <%= f.label(:bio) %>
        <%= f.text_area(:bio) %>
        <%= f.submit class: "button" %>
      <% end %>
  </div>

