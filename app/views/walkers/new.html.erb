<div class='row'>
<%= form_for @walker, html: {class: "small-8 columns"} do |f| %>
  <%= f.label(:first_name) %>
  <%= f.text_field(:first_name) %>
  <%= f.label(:last_name) %>
  <%= f.text_field(:last_name) %>
  <%= f.label(:email) %>
  <%= f.email_field(:email) %>
  <br>
  <%= f.label(:boro_id) %>
  <%= f.collection_select(:boro_id, @boros, :id, :name) %>
  <br>
  <%= f.label(:password) %>
  <%= f.password_field(:password) %>
  <%= f.label(:password_confirmation) %>
  <%= f.password_field(:password_confirmation) %>
  <br>
  <%= f.label(:phone) %>
  <%= f.text_field(:phone) %>
  <br>
  <%= f.submit class: "button" %>

  <% end %>
</div>
